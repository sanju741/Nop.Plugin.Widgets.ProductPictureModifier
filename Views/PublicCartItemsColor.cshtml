@using Nop.Web.Framework.UI
@model List<Nop.Plugin.Widgets.ProductPictureModifier.Models.ProductPictureModifierModel>

<script>
    $(document).ready(function () {
        var model = @Html.Raw(Json.Serialize(Model));
        $.each(model, function (i, value) {
            if (value.CustomImagePath != null && value.CustomImagePath !== "") {
                     $("[for=itemquantity"+value.EntityId+"]").closest('td').siblings(".product-picture").children("a").children("img").attr('src',value.CustomImagePath);
                }
            $("[for=itemquantity" + value.EntityId + "]").closest('td').siblings(".product-picture").children("a").children("img").css("background-color", value.ColorCode);
        });
    });
</script>
