@model Nop.Plugin.Widgets.ProductPictureModifier.Models.ProductPictureModifierModel
@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.Title = T("Admin.Configuration.Widgets.ProductPictureModifier.Edit").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("ProductPictureModifierPlugin");
}

<form asp-controller="WidgetsProductPictureModifier" asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="EntityId" type="hidden" />
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.Widgets.ProductPictureModifier.EditMapping") - @Model.ProductName
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="Configure">@T("Admin.Configuration.Widgets.ProductPictureModifier.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="mapping-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.ProductId" asp-button-id="mapping-delete" />

