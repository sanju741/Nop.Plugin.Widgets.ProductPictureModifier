@model Nop.Plugin.Widgets.ProductPictureModifier.Models.ProductPictureModifierModel
@{
    Layout = "_AdminLayout";
    //page title
    ViewBag.Title = T("Admin.Configuration.Widgets.ProductPictureModifier.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("ProductPictureModifierPlugin");
}

<form asp-controller="WidgetsProductPictureModifier" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.Widgets.ProductPictureModifier.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="Configure">@T("Admin.Configuration.Widgets.ProductPictureModifier.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>

    </div>
    @await Html.PartialAsync("_CreateOrUpdate.cshtml", Model)
</form>